{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "C++ Launch",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceRoot}/build/demo.out",// 要 debug 的程序的路径
          "stopAtEntry": false,
          "cwd": "${workspaceRoot}",
          "externalConsole": true,
          "preLaunchTask": "g++", // 每次 debug 前都应用 tasks 中的 g++ 任务编译一次
          "linux": {
              "MIMode": "gdb",
              "setupCommands": [
                  {
                      "description": "Enable pretty-printing for gdb",
                      "text": "-enable-pretty-printing",
                      "ignoreFailures": true
                  }
              ]
          },
          "osx": {
              "MIMode": "lldb"
          },
          "windows": {
              "MIMode": "gdb",
              "setupCommands": [
                  {
                      "description": "Enable pretty-printing for gdb",
                      "text": "-enable-pretty-printing",
                      "ignoreFailures": true
                  }
              ]
          }
      },
      {
          "name": "C++ Attach",
          "type": "cppdbg",
          "request": "attach",
          "program": "${workspaceRoot}/build/demo.out",
          "processId": "${command:pickProcess}",
          "linux": {
              "MIMode": "gdb",
              "setupCommands": [
                  {
                      "description": "Enable pretty-printing for gdb",
                      "text": "-enable-pretty-printing",
                      "ignoreFailures": true
                  }
              ]
          },
          "osx": {
              "MIMode": "lldb"
          },
          "windows": {
              "MIMode": "gdb",
              "setupCommands": [
                  {
                      "description": "Enable pretty-printing for gdb",
                      "text": "-enable-pretty-printing",
                      "ignoreFailures": true
                  }
              ]
          }
      }
  ]
}